<h1>Устройство № <%= h @device.device_code %> </h1>

<%= GMap.header %>
<%= @map.to_html %>
<%= @map.div(:width => 700, :height => 500) %>

<table>
  <tr>
    <td> ID_записи   </td>
    <td> ID_репорта  </td>
    <td> Параметр   </td>
    <td> Значение   </td>
    <td> Дата создания   </td>
  </tr> 
<% @report_fields.each do |field| %>
  <tr>
    <td><%= h field.id %>   </td>
    <td><%= h field.report_id %>   </td>
    <td><%= h field.key %>   </td>
    <td><%= h field.value %>   </td>
    <td><%= h field.created_at %>   </td>
  </tr>
<% end %>
</table>

<%= link_to 'Back', devices_path %>
