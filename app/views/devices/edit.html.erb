<h3>Редактирование статуса устройства</h3>

<% form_for @device do |form| %>
  <table>
  <tr>
    <td style='padding-right:10px;'> Device Name: </td>
    <td>  <%= form.label @device.device_code %> </td>
  </tr>
  <tr>
    <td> Created at: </td>
    <td><%= form.label @device.created_at %> </td>
  </tr>
  <tr>
    <td> Old status: </td>
    <td><%= form.label @device.device_status %></td>
  </tr> 
  <tr>
    <td> New status: </td>
    <td><%= form.select :device_status, [['stop', 'stop'], ['repair', 'repair'], ['go', 'go']] %> </td>
  </tr>
  <tr>
    <td> Old type: </td>
    <td><%= form.label @device.device_type %></td> 
  </tr>                 
  <tr>
    <td> New type: </td>
    <td><%= form.select :device_type, [['bus', 'bus'], ['tank', 'tank'], ['kamaz', 'kamaz'], ['rail', 'rail'], ['gaz', 'gaz'], ['gazel', 'gazel']] %></td>
  </tr>  
  </table>
  <%= submit_tag 'Update' %>
<% end %>
